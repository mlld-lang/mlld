@define runthis(x, y) = @run [echo {{x}} {{y}}]
@text hello = "howdy"
@text world = "planet"

// Test with variable references
@run $runthis({{hello}}, {{world}})

// Test with string literals
@run $runthis("hello","world")

// Test with string literals containing commas
@run $runthis("hello, friend","beautiful world")