{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Task",
  "type": "object",
  "required": ["id", "type", "description"],
  "properties": {
    "id": { "type": "string" },
    "type": { "type": "string", "enum": ["classify", "write", "review"] },
    "description": { "type": "string" },
    "context": { "type": "object" },
    "priority": { "type": "string", "enum": ["critical", "high", "normal", "low"] }
  }
}
