{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Analysis Result",
  "type": "object",
  "required": ["status", "source", "summary", "findings"],
  "properties": {
    "status": { "type": "string", "enum": ["completed", "partial", "failed"] },
    "source": { "type": "string" },
    "summary": { "type": "string" },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["claim", "category", "confidence"],
        "properties": {
          "claim": { "type": "string" },
          "category": { "type": "string", "enum": ["risk", "opportunity", "observation", "recommendation"] },
          "evidence": { "type": "string" },
          "confidence": { "type": "string", "enum": ["high", "medium", "low"] }
        }
      }
    },
    "connections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" },
          "relationship": { "type": "string" }
        }
      }
    }
  }
}
