{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Development Decision",
  "type": "object",
  "required": ["reasoning", "action"],
  "properties": {
    "reasoning": { "type": "string" },
    "action": {
      "type": "string",
      "enum": ["work", "create_issue", "close_issue", "blocked", "complete"]
    }
  },
  "allOf": [
    {
      "if": { "properties": { "action": { "const": "work" } } },
      "then": {
        "required": ["issue", "task_type"],
        "properties": {
          "issue": { "type": "integer" },
          "task_type": { "type": "string", "enum": ["implement", "invalidate", "review"] },
          "guidance": { "type": "string" }
        }
      }
    },
    {
      "if": { "properties": { "action": { "const": "create_issue" } } },
      "then": {
        "required": ["title", "body"],
        "properties": {
          "title": { "type": "string" },
          "body": { "type": "string" },
          "labels": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    {
      "if": { "properties": { "action": { "const": "close_issue" } } },
      "then": {
        "required": ["issue", "reason"],
        "properties": {
          "issue": { "type": "integer" },
          "reason": { "type": "string" },
          "comment": { "type": "string" }
        }
      }
    },
    {
      "if": { "properties": { "action": { "const": "blocked" } } },
      "then": {
        "required": ["questions"],
        "properties": {
          "questions": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["question"],
              "properties": {
                "context": { "type": "string" },
                "question": { "type": "string" }
              }
            }
          }
        }
      }
    },
    {
      "if": { "properties": { "action": { "const": "complete" } } },
      "then": {
        "required": ["summary"],
        "properties": {
          "summary": { "type": "string" }
        }
      }
    }
  ]
}
