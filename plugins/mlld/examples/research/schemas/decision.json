{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Research Decision",
  "type": "object",
  "required": ["reasoning", "action"],
  "properties": {
    "reasoning": { "type": "string" },
    "action": {
      "type": "string",
      "enum": ["discover", "assess", "synthesize", "invalidate", "complete", "blocked"]
    }
  },
  "allOf": [
    {
      "if": { "properties": { "action": { "const": "assess" } } },
      "then": {
        "properties": {
          "targets": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    {
      "if": { "properties": { "action": { "const": "complete" } } },
      "then": {
        "required": ["summary"],
        "properties": {
          "summary": { "type": "string" }
        }
      }
    },
    {
      "if": { "properties": { "action": { "const": "blocked" } } },
      "then": {
        "required": ["questions"],
        "properties": {
          "questions": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  ]
}
