{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "typeRoots": ["./deps"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "declarationMap": false,
    "rootDir": "deps",
    "outDir": "deps"
  },
  "include": [
    "deps/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}