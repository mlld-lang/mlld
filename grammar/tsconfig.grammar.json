{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "outDir": "."
  },
  "include": [
    "core/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}