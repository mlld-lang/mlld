{
  "resolvers": {
    "prefixes": [
      {
        "prefix": "@local/",
        "resolver": "LOCAL",
        "type": "input",
        "priority": 20,
        "config": {
          "basePath": "./llm/modules"
        }
      },
      {
        "prefix": "@devdocs/",
        "resolver": "LOCAL",
        "config": {
          "basePath": "docs/dev"
        }
      },
      {
        "prefix": "@userdocs/",
        "resolver": "LOCAL",
        "config": {
          "basePath": "docs/user"
        }
      },
      {
        "prefix": "@prompts/",
        "resolver": "LOCAL",
        "config": {
          "basePath": "llm/prompts"
        }
      }
    ]
  },
  "scriptDir": "llm/run"
}
