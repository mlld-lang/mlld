{
  "name": "mlld-vscode",
  "displayName": "mlld",
  "description": "Language support for mlld - A modular prompt scripting language",
  "version": "0.1.0",
  "publisher": "mlld-lang",
  "repository": {
    "type": "git",
    "url": "https://github.com/mlld-lang/mlld.git"
  },
  "homepage": "https://github.com/mlld-lang/mlld/tree/main/editors/vscode",
  "bugs": {
    "url": "https://github.com/mlld-lang/mlld/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "keywords": [
    "mlld",
    "markdown",
    "composition",
    "template"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onLanguage:mlld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mlld",
        "aliases": [
          "mlld",
          "Mlld"
        ],
        "extensions": [
          ".mlld",
          ".mld"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mlld",
        "scopeName": "source.mlld",
        "path": "./syntaxes/mlld.tmLanguage.json"
      },
      {
        "scopeName": "markdown.mlld.injection",
        "path": "./syntaxes/mlld-markdown.injection.json",
        "injectTo": ["text.html.markdown"]
      }
    ],
    "snippets": [
      {
        "language": "mlld",
        "path": "./snippets/mlld.json"
      }
    ],
    "configuration": {
      "title": "mlld",
      "properties": {
        "mlld.enableAutocomplete": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable autocomplete features"
        },
        "mlld.projectPath": {
          "type": "string",
          "default": null,
          "description": "Override @PROJECTPATH detection"
        },
        "mlld.includePaths": {
          "type": "array",
          "default": [],
          "description": "Additional paths for import resolution"
        }
      }
    },
    "commands": [
      {
        "command": "mlld.switchToMLLD",
        "title": "mlld: Switch to mlld Mode",
        "when": "resourceExtname == .md && editorLangId != mlld"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "jest"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.0.0",
    "@types/jest": "^29.0.0",
    "@vscode/vsce": "^2.24.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  },
  "dependencies": {}
}