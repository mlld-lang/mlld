{
  "name": "meld",
  "version": "11.0.0",
  "description": "Meld: A template language for LLM prompts",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "bin": {
    "meld": "./bin/meld-wrapper.cjs"
  },
  "files": [
    "dist/",
    "bin/"
  ],
  "scripts": {
    "build:grammar:core": "npx tsc -p grammar/tsconfig.grammar.json",
    "build:grammar": "npm run build:grammar:core && node grammar/build-grammar.mjs && npm run ast:fixtures",
    "build": "npm run build:grammar && tsup",
    "ast": "npm run build:grammar && node ./scripts/ast-output.js",
    "ast:debug": "DEBUG_MELD_GRAMMAR=1 npm run ast --",
    "ast:fixtures": "node ./tests/utils/ast-fixtures.js process-examples ./tests/cases ./tests",
    "reinstall": "npm run build && npm uninstall meld && npm install -g .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ast": "npx vitest run core/ast",
    "lint": "eslint .",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "bump": "node scripts/bump-version.js",
    "bump:patch": "node scripts/bump-version.js patch",
    "bump:minor": "node scripts/bump-version.js minor",
    "bump:major": "node scripts/bump-version.js major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamavenir/meld.git"
  },
  "keywords": [
    "meld",
    "interpreter",
    "language",
    "llm",
    "prompt",
    "cli"
  ],
  "author": "Adam Avenir",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adamavenir/meld/issues"
  },
  "homepage": "https://github.com/adamavenir/meld#readme",
  "dependencies": {
    "@types/lodash": "^4.17.16",
    "@types/uuid": "^10.0.0",
    "@types/xmldom": "^0.1.34",
    "chalk": "^4.1.2",
    "commander": "^13.1.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.1",
    "llmxml": "^1.4.2",
    "lodash": "^4.17.21",
    "marked": "^4.0.12",
    "minimatch": "^3.0.4",
    "pathe": "1.1.2",
    "peggy": "^4.2.0",
    "prettier": "^3.5.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "xmldom": "^0.6.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.15.21",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.18.0",
    "meld-ast-explorer": "file:lib/ast-explorer",
    "memfs": "^4.7.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.29.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1",
    "vitest-mock-extended": "^2.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-languageserver-types": "^3.17.5"
  }
}
