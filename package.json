{
  "name": "meld",
  "version": "0.1.0",
  "description": "Official interpreter for the Meld language",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "meld": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamavenir/meld.git"
  },
  "keywords": [
    "meld",
    "interpreter",
    "language"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adamavenir/meld/issues"
  },
  "homepage": "https://github.com/adamavenir/meld#readme",
  "dependencies": {
    "@types/xmldom": "^0.1.34",
    "glob": "^11.0.1",
    "llmxml": "^1.1.2",
    "marked": "^4.0.12",
    "meld-ast": "^1.1.0",
    "meld-spec": "^0.3.10",
    "minimatch": "^3.0.4",
    "peggy": "^4.2.0",
    "winston": "^3.17.0",
    "xmldom": "^0.6.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "eslint": "^9.18.0",
    "fs-extra": "^11.3.0",
    "memfs": "^4.7.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.0.2",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.9"
  },
  "type": "module"
}
