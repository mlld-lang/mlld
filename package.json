{
  "name": "meld",
  "version": "0.1.0",
  "description": "Official interpreter for the Meld language",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "bin": {
    "meld": "./dist/cjs/bin/meld.js"
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "test": "npm run build && vitest --run",
    "test:watch": "npm run build && vitest watch",
    "test:coverage": "npm run build && vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "fixmytests": "meld FIXMYTESTS.meld.md --overwrite ; oneshot FIXMYTESTS.md --model o1-preview -o FIXMYTESTS-PLAN.md",
    "fixmytests:sonnet": "meld FIXMYTESTS.meld.md --overwrite ; oneshot FIXMYTESTS.md --model sonnet -o FIXMYTESTS-SONNET.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamavenir/meld.git"
  },
  "keywords": [
    "meld",
    "interpreter",
    "language"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adamavenir/meld/issues"
  },
  "homepage": "https://github.com/adamavenir/meld#readme",
  "dependencies": {
    "llmxml": "^1.1.2",
    "meld-ast": "^0.4.2",
    "meld-spec": "^0.3.10",
    "winston": "^3.17.0",
    "yargs": "^17.7.2",
    "marked": "^4.0.12",
    "minimatch": "^3.0.4"
  },
  "devDependencies": {
    "eslint": "^9.18.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
