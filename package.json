{
  "name": "meld",
  "version": "11.0.0",
  "description": "Meld: A template language for LLM prompts",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "bin": {
    "meld": "./bin/meld-wrapper.js"
  },
  "scripts": {
    "build:grammar:core": "npx tsc -p grammar/tsconfig.grammar.json",
    "build:grammar": "npm run build:grammar:core && node grammar/build-grammar.mjs",
    "build:explorer": "node grammar/scripts/build-explorer.mjs",
    "build": "npm run build:grammar && tsup",
    "ast": "npm run build:grammar && node ./scripts/ast-output.js",
    "ast:debug": "DEBUG_MELD_GRAMMAR=1 npm run ast --",
    "reinstall": "npm run build && npm uninstall meld && npm install -g .",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ast": "npx vitest run core/ast",
    "test:e2e": "node scripts/e2e-case-runner.js",
    "test:e2e:verbose": "node scripts/e2e-case-runner.js --verbose",
    "test:e2e:clean": "node scripts/e2e-case-runner.js clean",
    "generate:fixtures": "node grammar/scripts/build-fixtures.mjs",
    "generate:types": "node grammar/scripts/generate-types.mjs",
    "lint": "eslint .",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "meld": "node scripts/process-meld.js",
    "debug": "node dist/cli.cjs debug-resolution",
    "debug:resolution": "node dist/cli.cjs debug-resolution",
    "debug:context": "node dist/cli.cjs debug-context",
    "debug:transform": "node dist/cli.cjs debug-transform",
    "debug:test-file": "npm run build && node dist/cli.cjs debug-resolution _dev/scripts/debug/test-files/debug-test.meld",
    "debug:test-import": "npm run build && node dist/cli.cjs debug-resolution _dev/scripts/debug/test-files/debug-imported.meld",
    "debug:test-context": "npm run build && node dist/cli.cjs debug-context _dev/scripts/debug/test-files/debug-test.meld --variable-name testVar --viz-type variable-propagation",
    "debug:test-fixed": "npm run build && node dist/cli.cjs debug-resolution _dev/scripts/debug/test-files/debug-test-fixed.meld",
    "debug:test-fixed-context": "npm run build && node dist/cli.cjs debug-context _dev/scripts/debug/test-files/debug-test-fixed.meld --variable-name testVar --viz-type variable-propagation",
    "debug:test-fixed-transform": "npm run build && node dist/cli.cjs debug-transform _dev/scripts/debug/test-files/debug-test-fixed.meld",
    "prepare-main": "node scripts/prepare-main.js",
    "sync-dev": "node scripts/sync-dev-branch.js",
    "sync-main-to-dev": "node scripts/sync-main-to-dev.js",
    "check:imports": "node scripts/check-module-imports.js",
    "fix:imports": "node scripts/fix-module-imports.js",
    "fix:imports:dry": "node scripts/fix-module-imports.js --dry-run",
    "fix:imports:verbose": "node scripts/fix-module-imports.js --verbose",
    "bump": "node scripts/bump-version.js",
    "bump:patch": "node scripts/bump-version.js patch",
    "bump:minor": "node scripts/bump-version.js minor",
    "bump:major": "node scripts/bump-version.js major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamavenir/meld.git"
  },
  "keywords": [
    "meld",
    "interpreter",
    "language",
    "llm",
    "prompt",
    "cli"
  ],
  "author": "Adam Avenir",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adamavenir/meld/issues"
  },
  "homepage": "https://github.com/adamavenir/meld#readme",
  "dependencies": {
    "@types/lodash": "^4.17.16",
    "@types/uuid": "^10.0.0",
    "@types/xmldom": "^0.1.34",
    "chalk": "^4.1.2",
    "commander": "^13.1.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.1",
    "llmxml": "^1.4.2",
    "lodash": "^4.17.21",
    "marked": "^4.0.12",
    "minimatch": "^3.0.4",
    "pathe": "1.1.2",
    "peggy": "^4.2.0",
    "prettier": "^3.5.3",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "xmldom": "^0.6.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/fs-extra": "^11.0.4",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.18.0",
    "memfs": "^4.7.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.29.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1",
    "vitest-mock-extended": "^2.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-languageserver-types": "^3.17.5"
  }
}
