{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "ES2022.Error"],
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "noEmitOnError": false,
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["core/*"],
      "@services/*": ["services/*"],
      "@parser/*": ["parser/*"],
      "@interpreter/*": ["interpreter/*"],
      "@output/*": ["output/*"],
      "@cli/*": ["cli/*"],
      "@sdk/*": ["api/*"],
      "@api/*": ["api/*"],
      "@api": ["api/index.ts", "api/index.js"],
      "@tests/*": ["tests/*"],
      "@grammar/*": ["grammar/*"]
    }
  },
  "include": [
    "core/**/*",
    "services/**/*",
    "parser/**/*",
    "interpreter/**/*",
    "output/**/*",
    "cli/**/*",
    "api/**/*",
    "tests/**/*",
    "grammar/**/*",
    "*.ts",
    "_dev/issues/active/audit/test-audit-script.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "_old",
    "_meld",
    "meld-ast",
    "core/ast/grammar/build-grammar.mjs",
    "core/ast/grammar/parser.cjs",
    "core/ast/grammar/parser.js",
    "core/ast/tests/debug-test.js",
    "core/ast/tests/debug-text-directive.cjs",
    "core/ast/tests/embed-double-bracket-test.js",
    "tests/circular-dependency-test.js",
    "tests/embed-variable-test.js",
    "tests/utils/cli/mockArgv.js"
  ]
} 