{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["core/*"],
      "@services/*": ["services/*"],
      "@parser/*": ["parser/*"],
      "@interpreter/*": ["interpreter/*"],
      "@output/*": ["output/*"],
      "@cli/*": ["cli/*"],
      "@sdk/*": ["sdk/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": [
    "core/**/*",
    "services/**/*",
    "parser/**/*",
    "interpreter/**/*",
    "output/**/*",
    "cli/**/*",
    "sdk/**/*",
    "tests/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "_old",
    "_meld"
  ]
} 